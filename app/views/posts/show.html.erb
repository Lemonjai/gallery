<h1><%= @post.title %></h1>
<p><%= @post.link %></p>
<p><%= @post.desc %></p>
<!-- Check post functions for users-->
<%= link_to "Home", root_path %>
<% if current_user == @post.user %>
  <%= link_to "Edit", edit_post_path %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %>
<% end %>